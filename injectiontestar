-- Script ESP, Speed e High Jump — Autorizado para “Roube Um Brainrot”

-- Configurações
local ESPAtivo = false
local SpeedAtivo = false
local JumpAtivo = false
local VelocidadeDesejada = 50
local JumpPowerDesejado = 100
local DesenhosESP = {}

local player = game.Players.LocalPlayer
local humanoid

-- Função para atualizar humanoide
local function AtualizarHumanoid()
    humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        if SpeedAtivo then humanoid.WalkSpeed = VelocidadeDesejada else humanoid.WalkSpeed = 16 end
        if JumpAtivo then humanoid.JumpPower = JumpPowerDesejado else humanoid.JumpPower = 50 end
    end
end

-- Interface Melhorada (GUI)
local function CriarInterface()
    local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
    gui.Name = "HackInterface"
    gui.ResetOnSpawn = false

    local frame = Instance.new("Frame", gui)
    frame.Size = UDim2.new(0, 200, 0, 180)
    frame.Position = UDim2.new(0, 10, 0, 10)
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    frame.BorderSizePixel = 0

    local titulo = Instance.new("TextLabel", frame)
    titulo.Size = UDim2.new(1, 0, 0, 30)
    titulo.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    titulo.Text = "Painel de Hacks"
    titulo.TextColor3 = Color3.fromRGB(255, 255, 255)
    titulo.TextSize = 18
    titulo.Font = Enum.Font.SourceSansBold

    local botaoESP = Instance.new("TextButton", frame)
    botaoESP.Size = UDim2.new(1, -20, 0, 30)
    botaoESP.Position = UDim2.new(0, 10, 0, 40)
    botaoESP.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    botaoESP.TextColor3 = Color3.fromRGB(255, 255, 255)
    botaoESP.Text = "ESP: OFF"
    botaoESP.MouseButton1Click:Connect(function()
        ESPAtivo = not ESPAtivo
        botaoESP.Text = ESPAtivo and "ESP: ON" or "ESP: OFF"
    end)

    local botaoSpeed = Instance.new("TextButton", frame)
    botaoSpeed.Size = UDim2.new(1, -20, 0, 30)
    botaoSpeed.Position = UDim2.new(0, 10, 0, 80)
    botaoSpeed.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    botaoSpeed.TextColor3 = Color3.fromRGB(255, 255, 255)
    botaoSpeed.Text = "Speed: OFF"
    botaoSpeed.MouseButton1Click:Connect(function()
        SpeedAtivo = not SpeedAtivo
        botaoSpeed.Text = SpeedAtivo and "Speed: ON" or "Speed: OFF"
        AtualizarHumanoid()
    end)

    local botaoJump = Instance.new("TextButton", frame)
    botaoJump.Size = UDim2.new(1, -20, 0, 30)
    botaoJump.Position = UDim2.new(0, 10, 0, 120)
    botaoJump.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    botaoJump.TextColor3 = Color3.fromRGB(255, 255, 255)
    botaoJump.Text = "Jump: OFF"
    botaoJump.MouseButton1Click:Connect(function()
        JumpAtivo = not JumpAtivo
        botaoJump.Text = JumpAtivo and "Jump: ON" or "Jump: OFF"
        AtualizarHumanoid()
    end)

    local botaoFechar = Instance.new("TextButton", frame)
    botaoFechar.Size = UDim2.new(1, -20, 0, 30)
    botaoFechar.Position = UDim2.new(0, 10, 0, 160)
    botaoFechar.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    botaoFechar.TextColor3 = Color3.fromRGB(255, 255, 255)
    botaoFechar.Text = "Fechar Painel"
    botaoFechar.MouseButton1Click:Connect(function()
        frame.Visible = false
    end)

    local reabrir = Instance.new("TextButton", gui)
    reabrir.Size = UDim2.new(0, 120, 0, 30)
    reabrir.Position = UDim2.new(0, 10, 1, -40)
    reabrir.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
    reabrir.TextColor3 = Color3.fromRGB(255, 255, 255)
    reabrir.Text = "Abrir Painel"
    reabrir.MouseButton1Click:Connect(function()
        frame.Visible = true
    end)
end

-- Criar ESP para cada jogador
local function CriarESP(player)
    if player == player.LocalPlayer then return end
    if player.Team and player.Team == player.LocalPlayer.Team then return end

    local text = Drawing.new("Text")
    text.Text = player.Name
    text.Size = 14
    text.Center = true
    text.Outline = true
    text.Color = Color3.fromRGB(255, 0, 0)
    text.Visible = false
    DesenhosESP[player] = text
end

-- Atualizar ESP em cada frame
local function AtualizarESP()
    game:GetService("RunService").RenderStepped:Connect(function()
        for _, pl in pairs(game.Players:GetPlayers()) do
            if pl ~= player then
                if not DesenhosESP[pl] then CriarESP(pl) end
                local esp = DesenhosESP[pl]
                local hrp = pl.Character and pl.Character:FindFirstChild("HumanoidRootPart")
                if ESPAtivo and hrp then
                    local pos, vis = workspace.CurrentCamera:WorldToViewportPoint(hrp.Position)
                    esp.Visible = vis
                    if vis then esp.Position = Vector2.new(pos.X, pos.Y - 20) end
                else
                    esp.Visible = false
                end
            end
        end
    end)
end

-- Reaplicar speed e jump quando personagem recarregar
player.CharacterAdded:Connect(function()
    AtualizarHumanoid()
end)

-- Inicialização
CriarInterface()
AtualizarESP()
AtualizarHumanoid()
